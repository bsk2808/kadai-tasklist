<h1>ログイン</h1>

<div>
  <div>
    
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    
      <div>
        <%= f.label :username, 'ユーザーネーム' %>
        <%= f.text_field :username %>
      </div>
      
      <div>
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
      </div>
      
      <%= f.submit 'ログイン' %>
    <% end %>
    
    <p>新規登録はこちら <%= link_to '登録', signup_path %></p>
  </div>
</div>
